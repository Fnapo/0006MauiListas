<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompraSemanal.Vistas.LeerDatos"
			 NavigationPage.HasBackButton="False"
			 BackgroundColor="LightGray"
             Title="Leyendo los Datos">

	<Grid ColumnDefinitions="*" RowDefinitions="*,*" >
		<VerticalStackLayout VerticalOptions="Center" Spacing="5">
			<Button x:Name="botonCrear" Text="crear lista" Clicked="CrearLista" IsEnabled="False"
				Style="{StaticResource EstiloBotonAvanzar}" HorizontalOptions="CenterAndExpand" />
			<Button x:Name="botonSalir" Text="salir" Clicked="Salir" IsEnabled="False"
				Style="{StaticResource EstiloBotonPeligro}" HorizontalOptions="CenterAndExpand" />
		</VerticalStackLayout>
		<ActivityIndicator x:Name="Indicador" Color="White" IsRunning="False" Grid.Row="1" />
		<Label x:Name="Mensaje" Text="Leyendo" FontSize="Small" Grid.Row="1" 
		IsVisible="False" Style="{StaticResource EstiloLabelAvisoError}" />
	</Grid>

</ContentPage>