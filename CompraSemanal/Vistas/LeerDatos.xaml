<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompraSemanal.Vistas.LeerDatos"
			 NavigationPage.HasBackButton="False"
			 Style="{StaticResource EstiloPaginaGeneral}"
             Title="Leyendo los Datos">

	<Grid x:Name="gridPrincipal" ColumnDefinitions="*" RowDefinitions="*,*"
	Style="{StaticResource EstiloGridPrincipal}" >
		<Grid ColumnDefinitions="3*,14*,3*" RowDefinitions="auto,auto" 
		Style="{StaticResource EstiloGridCentrada}" RowSpacing="5">
			<Button x:Name="botonCrear" Text="crear lista" Clicked="CrearLista" IsEnabled="False"
				Style="{StaticResource EstiloBotonAvanzar}" Grid.Column="1" Grid.Row="0" />
			<Button x:Name="botonSalir" Text="salir" Clicked="Salir" IsEnabled="False"
				Style="{StaticResource EstiloBotonPeligro}" Grid.Column="1" Grid.Row="1" />
		</Grid>
		<ActivityIndicator x:Name="Indicador" Color="BlueViolet" IsRunning="False" Grid.Row="1" />
		<Label x:Name="Mensaje" Text="Leyendo" FontSize="Small" Grid.Row="1" 
		IsVisible="False" Style="{StaticResource EstiloLabelAvisoError}" />
	</Grid>

</ContentPage>